<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account - List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Member List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Create Date</th>
            </tr>
        </thead>
        <tbody>
            <% rows.forEach(function(member) { %>
                <tr>
                    <td><%= member.ID %></td>
                    <td><%= member.EMAIL %></td>
                    <td><%= member.CREATE_DATE %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
